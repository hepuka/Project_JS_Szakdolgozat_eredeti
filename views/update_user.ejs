

<%- include('include/_header') %>


  <main id="site-main">
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 m-auto">
              <h1 class="text-center mb-3">
                Alkalmazott adatainak módosítása
              </h1>
            
        <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="name" class="text-dark">Név</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" class="form-control" value="<%= user.name %>">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="username" class="text-dark">Felhasználónév</label>
            <input type="text" name="username" class="form-control" value="<%= user.username%>">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="Email" class="text-dark">Email</label>
            <input type="text" name="email" class="form-control" value="<%= user.email%>">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="role" class="text-dark">Jogosultság</label>
            <input type="text" name="role" class="form-control" placeholder="Admin vagy Alap" value="<%= user.role%>">
        </div>
        <div class="form-group">
            <div class="container" style="margin-top: 40px">
              <div class="row justify-content-center">
                <button type="submit" class="btn btn-warning col-md-6 update">Mentés</button>
              </div>
            </div>
          </div>

          <div class="box-nav d-flex justify-content-center" style="margin-top: 40px;">
            <button type="reset" class="btn btn-danger col-md-6" onclick="location.href='/admin'">
              Vissza a lekérdezéshez
          </button>
         </div>
    </div>
    
</form>
</div>     
    </div>
</div>
</main>

<%- include('include/_footer') %>

