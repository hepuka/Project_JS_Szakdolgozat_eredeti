<%- include('include/_header_login.ejs') %>

 <div class="container d-flex justify-content-center" style="margin-top: 200px;">
 
 <div class="row mt-4" style="width: 700px;border-radius: 30px;">
    <h3 class="text-center mb-3" style="margin-top: 50px;">
      Bejelentkezés
    </h3>
    <div class="col-md-6 m-auto">
        <form action="/users/login" method="POST" style="margin-top: 30px;">
          <div class="form-group">
            <label for="username" class="form-label" style="margin-bottom: 10px;">Felhasználónév</label>
            <input
              type="username"
              id="username"
              name="username"
              class="form-control"
              placeholder="Add meg a felhasználóneved"
              style="background-color: bisque;"
              
            />
          </div>
          <div class="form-group" style="margin-top: 30px;">
            <label for="password" class="form-label" style="margin-bottom: 10px;">Jelszó</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Add meg a jelszavad"
              style="background-color: bisque;"
            />
          </div>
          <div class="container" style="margin-top: 60px">
            <div class="row justify-content-center">
  
              <button type="submit" class="btn btn-secondary btn-block col-6" style="margin-bottom: 60px;">Belépés</button>          
            </div>  
          </div> 
        </form>
    </div>
  </div>
  
</div>

<%- include('include/_footer_login.ejs') %>
