<body>


  <div class="container" style="margin-top: 100px;margin-bottom: 50px;">

 <div class="container" style="margin-top: 150px;">
 
  <div class="row mt-4 justify-content-center">
    <h1 class="text-center mb-3" style="margin-top: 100px;">
      BEJELENTKEZÉS
    </h1>
  </div>
  <div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form action="/users/login" method="POST" style="margin-top: 30px;">
          <div class="form-group">
            <label for="username" class="form-label" style="margin-bottom: 10px;">Felhasználónév</label>
            <input
              type="username"
              id="username"
              name="username"
              class="form-control"
              placeholder="Add meg a felhasználóneved"
            />
          </div>
          <div class="form-group" style="margin-top: 30px;">
            <label for="password" class="form-label" style="margin-bottom: 10px;">Jelszó</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Add meg a jelszavad"
            />
          </div>
          <div class="container" style="margin-top: 60px">
            <div class="row justify-content-center">
  
              <button type="submit" class="btn btn-warning btn-block col-6">Belépés</button>          
            </div>  
          </div> 
        </form>
    </div>
  </div>
  
</div>
