<%- include('include/_header_admin.ejs') %>
<%- include('include/_navbar.ejs') %>

  <main id="site-main">
      <div class="container" style="margin-top: 150px; padding-top: 30px; border-radius: 30px; width: 800px;">
        <h3 class="text-center mb-3">
           Új Kávé felvétele
         </h3>
                    
              <form action="/api/kavek" method="POST" id="add_kave">
                <div class="new_user col-md-6 m-auto">
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="name" class="text-default">Név</label>
                        <input type="hidden" name="id" class="form-control" value="">
                        <input type="text" name="name" class="form-control" style="background-color:bisque" value="" placeholder="Add meg a kávé, kávéfajta nevét!">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="kiszereles" class="text-default">Kiszerelés</label>
                        <input type="text" name="kiszereles" class="form-control" style="background-color:bisque" value="" placeholder="Adj meg a kávé kiszerelését!">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="price" class="text-default">Egységár</label>
                        <input type="text" name="price" class="form-control" style="background-color:bisque" value="" placeholder="Add meg a kávé egységárát (forint nélkül)">
                    </div>            
                    <div class="form-group">
                        <div class="container" style="padding-bottom: 20px;">
                          <div class="row justify-content-center" style="margin-bottom: 30px;">
                            <button type="submit" class="btn btn-secondary col-md-4 create">Mentés</button>
                          </div>
                        </div>
                      </div>
                </div>
            </form>
    </div>
</main>

<script src="/js/index.js"></script>


