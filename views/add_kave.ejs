<%- include('include/_header.ejs') %> <%- include('include/_navbar.ejs') %>

<h3 class="cim text-secondary">Új Kávé felvétele</h3>

<div class="d-flex justify-content-center">
  <div class="loginplace">
    <div class="col-9 col-xl-6 col-md-10 m-auto">
      <form action="/api/kavek" method="POST" id="add_kave">
        <div class="form-group">
          <label for="name" class="form-label">Név</label>
          <input type="hidden" name="id" class="form-control" value="" />
          <input
            type="text"
            name="name"
            class="form-control"
            value=""
            placeholder="Add meg a termék nevét!"
          />
        </div>
        <div class="form-group">
          <label for="kiszereles" class="text-default">Kiszerelés</label>
          <input
            type="text"
            name="kiszereles"
            class="form-control"
            value=""
            placeholder="Adj meg a termék kiszerelését!"
          />
        </div>
        <div class="form-group">
          <label for="price" class="text-default">Egységár</label>
          <input
            type="text"
            name="price"
            class="form-control"
            value=""
            placeholder="Add meg a termék egységárát (Ft nélkül)"
          />
        </div>

        <div class="button">
          <div class="row justify-content-center">
            <button
              type="submit"
              class="btn btn-secondary btn-block col-7 col-md-5 create"
            >
              Mentés
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('include/_footer.ejs') %>
