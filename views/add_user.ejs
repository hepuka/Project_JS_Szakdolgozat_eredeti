<%- include('include/_header.ejs') %> <%- include('include/_navbar.ejs') %>

<h3 class="cim text-secondary">Új alkalmazott felvétele</h3>

<div class="d-flex justify-content-center">
  <div class="loginplace">
    <div class="col-9 col-xl-6 col-md-5 m-auto">
      <form action="/api/users" method="POST" id="add_user">
        <div class="form-group">
          <label for="name" class="form-label">Név</label>
          <input type="hidden" name="id" class="form-control" value="" />
          <input
            type="text"
            name="name"
            class="form-control"
            value=""
            placeholder="Add meg a teljes nevet!"
          />
        </div>
        <div class="form-group">
          <label for="username" class="text-default">Felhasználónév</label>
          <input
            type="text"
            name="username"
            class="form-control"
            value=""
            placeholder="Adj meg egy felhasználónevet!"
          />
        </div>
        <div class="form-group">
          <label for="email" class="text-default important">Email</label>
          <input
            type="text"
            name="email"
            class="form-control"
            value=""
            placeholder="valami@valami.com"
          />
        </div>
        <div class="form-group">
          <label for="role" class="text-default">Jogosultság</label>
          <input
            type="text"
            name="role"
            class="form-control"
            value=""
            placeholder="Admin vagy Alap"
          />
        </div>
        <div class="form-group">
          <label for="password" class="text-default">Jelszó</label>
          <input
            type="text"
            name="password"
            class="form-control"
            value=""
            placeholder="Adj meg egy jelszavat!"
          />
        </div>
        <div class="form-group">
          <label for="password2" class="text-default"
            >Jelszó megerősítése</label
          >
          <input
            type="text"
            name="password2"
            class="form-control"
            value=""
            placeholder="Add meg a jelszavat újra!"
          />
        </div>
        <div class="button">
          <div class="row justify-content-center">
            <button
              type="submit"
              class="btn btn-secondary btn-block col-7 col-md-5 update"
            >
              Belépés
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('include/_footer.ejs') %>
