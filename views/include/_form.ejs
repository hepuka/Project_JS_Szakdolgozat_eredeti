 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user col-md-6 m-auto">
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="name" class="text-dark">Név</label>
            <input type="hidden" name="id" class="form-control" value="">
            <input type="text" name="name" class="form-control" value="" placeholder="Add meg a teljes nevet!">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="username" class="text-dark">Felhasználónév</label>
            <input type="text" name="username" class="form-control" value="" placeholder="Adj meg egy felhasználónevet!">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="email" class="text-dark important">Email</label>
            <input type="text" name="email" class="form-control" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="role" class="text-dark">Jogosultság</label>
            <input type="text" name="role" class="form-control" value="" placeholder="Admin vagy Alap">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="password" class="text-dark">Jelszó</label>
            <input type="text" name="password" class="form-control" value="" placeholder="Adj meg egy jelszavat!">
        </div>
        <div class="form-group" style="margin-bottom: 30px;">
            <label for="password2" class="text-dark">Jelszó megerősítése</label>
            <input type="text" name="password2" class="form-control" value="" placeholder="Add meg a jelszavat újra!">
        </div>

        <div class="form-group">
            <div class="container" style="margin-top: 40px">
              <div class="row justify-content-center">
                <button type="submit" class="btn btn-warning col-md-6 update">Mentés</button>
              </div>
            </div>
          </div>
    </div>
</form>
