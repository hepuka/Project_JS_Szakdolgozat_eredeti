             <h3 class="text-center mb-3">
                Új Ital felvétele
              </h3>
                    
              <form action="/api/italok" method="POST" id="add_ital">
                <div class="new_user col-md-6 m-auto">
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="name" class="text-default">Név</label>
                        <input type="hidden" name="id" class="form-control" value="">
                        <input type="text" name="name" class="form-control" value="" placeholder="Add meg az ital nevét!">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="kiszereles" class="text-default">Kiszerelés</label>
                        <input type="text" name="kiszereles" class="form-control" value="" placeholder="Adj meg az ital kiszerelését!">
                    </div>
                    <div class="form-group" style="margin-bottom: 30px;">
                        <label for="price" class="text-default">Egységár</label>
                        <input type="text" name="price" class="form-control" value="" placeholder="Add meg az ital egységárát (forint nélkül)">
                    </div>            
                    <div class="form-group">
                        <div class="container" style="padding-bottom: 20px">
                          <div class="row justify-content-center" style="margin-bottom: 30px;">
                            <button type="submit" class="btn btn-secondary col-md-4 create" style="margin-top: 5px;">Mentés</button>
                          </div>
                        </div>
                      </div>
                </div>
            </form>
    </div>
